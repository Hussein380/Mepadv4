NODE_ENV=development
PORT=5001

# MongoDB Connection
MONGO_URI=mongodb+srv://your_mongodb_uri

# JWT
JWT_SECRET=your_jwt_secret_key

# URLs
FRONTEND_URL=http://localhost:5173
# Public URL for sharing links (e.g., ngrok URL)
PUBLIC_URL=https://your-public-url.ngrok.io

# Email Configuration
# For testing, you can use services like Mailtrap.io or Ethereal
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_EMAIL=your-mailtrap-username
SMTP_PASSWORD=your-mailtrap-password
FROM_NAME=MePad
FROM_EMAIL=noreply@mepad.com